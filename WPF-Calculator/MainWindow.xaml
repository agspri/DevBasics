<Window x:Class="WPF_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Window.DataContext>
        <!-- DataContext!!! -->
        <local:CalculatorWindowViewModel/>
    </Window.DataContext>
    <Grid>
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
         <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.ColumnSpan="6" HorizontalAlignment="Left"
                 VerticalAlignment="Top" Width="400"
                     Margin="10" FontSize="30"
                 Text="{Binding CurrentValue}" 
                 />
        <Button Content="1" Grid.Column="1" Grid.Row="2"  FontSize="20" 
                Command="{Binding NumberCommand}"
                CommandParameter="1" />
        <Button Content="2" Grid.Column="2" Grid.Row="2"  FontSize="20"
                Command="{Binding NumberCommand}"
                CommandParameter="2" />
        <Button Content="3" Grid.Column="3" Grid.Row="2"  FontSize="20"
                Command="{Binding NumberCommand}"
                CommandParameter="3" />

        <Button Content="4" Grid.Column="1" Grid.Row="3"  FontSize="20"
                Command="{Binding NumberCommand}"
                CommandParameter="4" />
        <Button Content="5" Grid.Column="2" Grid.Row="3"  FontSize="20"
                Command="{Binding NumberCommand}"
                CommandParameter="5" />
        <Button Content="6" Grid.Column="3" Grid.Row="3"  FontSize="20"
                Command="{Binding NumberCommand}"
                CommandParameter="6" />

        <Button Content="7" Grid.Column="1" Grid.Row="4"  FontSize="20"
                Command="{Binding NumberCommand}"
                CommandParameter="7" />
        <Button Content="8" Grid.Column="2" Grid.Row="4"  FontSize="20"
                Command="{Binding NumberCommand}"
                CommandParameter="8" />
        <Button Content="9" Grid.Column="3" Grid.Row="4"  FontSize="20"
                Command="{Binding NumberCommand}"
                CommandParameter="9" />

        <Button Content="+" Grid.Column="4" Grid.Row="2"  FontSize="20"
                Command="{Binding OperatorCommand}"
                CommandParameter="+" />
        <Button Content="-" Grid.Column="4" Grid.Row="3"  FontSize="20"
                Command="{Binding OperatorCommand}"
                CommandParameter="-" />
        <Button Content="*" Grid.Column="4" Grid.Row="4"  FontSize="20"
                Command="{Binding OperatorCommand}"
                CommandParameter="*" />

        <Button Content="0" Grid.Column="2" Grid.Row="5"  FontSize="20"
                Command="{Binding OperatorCommand}"
                CommandParameter="0" />
        <Button Content="=" Grid.Column="3" Grid.Row="5"  FontSize="20"
                Background="LightGreen"
                Command="{Binding OperatorCommand}"
                CommandParameter="=" />
        <Button Content="/" Grid.Column="4" Grid.Row="5"  FontSize="20"
                Command="{Binding OperatorCommand}"
                CommandParameter="/" />

    </Grid>
</Window>
